<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_add_singular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/singular"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edit_add_plural"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/plural"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edit_add_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/translation"
        android:layout_marginBottom="10dp"/>

    <Switch
        android:id="@+id/switch_add_is_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/as_hard" />

</LinearLayout>